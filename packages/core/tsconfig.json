{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "outDir": "dist",
      "strict": true,
      "lib": ["es6", "dom"],
      "moduleResolution": "node",
      "declaration": true,
      "declarationMap": true,
      "composite": true,
      "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}